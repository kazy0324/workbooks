<div class="container col-md-10 col-md-offset-1">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h4 class="label_for_auth">サインイン</h4>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%#= link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%#= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %> メールアドレスとパスワードを保存する
        </label>
      </div>
    <% end -%>
    <%= f.submit 'ログイン', :class => 'button btn btn-primary submit_button' %>
  <% end %>
</div>
